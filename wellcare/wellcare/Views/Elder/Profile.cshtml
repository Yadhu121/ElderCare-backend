<body>

    <!-- Header -->
    <div class="header">
        <h2>Elder Profile</h2>

        <a asp-controller="CaretakerHome" asp-action="Index" class="back-link">
            ← Back to Caretaker Home
        </a>
    </div>

    <!-- Content -->
    <div class="content">

        <div class="profile-title">
            @Model.ElderName
        </div>

        <div class="profile-grid">
            <div class="label">Email</div>
            <div class="value">@Model.Email</div>

            <div class="label">Age</div>
            <div class="value">@Model.Age</div>

            <div class="label">Gender</div>
            <div class="value">@Model.Gender</div>

            <div class="label">Linked At</div>
            <div class="value">@Model.LinkedAt</div>
        </div>

        <!-- Existing live tracking page -->
        <div style="margin-top:24px;">
            <a asp-controller="elderTracking"
               asp-action="LiveTracking"
               asp-route-elderId="@Model.ElderId"
               style="
                display:inline-block;
                background:#4f46e5;
                color:white;
                padding:10px 18px;
                border-radius:8px;
                text-decoration:none;
                font-size:14px;
               ">
                View Live Location
            </a>
        </div>

        <!-- MICROservice test button -->
        <div style="margin-top:16px;">
            <button onclick="startWatch(@Model.ElderId)"
                    style="
                    background:#059669;
                    color:white;
                    padding:10px 18px;
                    border-radius:8px;
                    border:none;
                    cursor:pointer;
                    font-size:14px;">
                Watch Location (Test - Microservice)
            </button>
        </div>

        <!-- Live log -->
        <div id="liveLog"></div>

    </div>

    <script>
        let ws = null;

        function startWatch(elderId) {

            if (ws) ws.close();

            // JWT from ElderCare login (adjust if stored elsewhere)
            const token = localStorage.getItem("jwt");

            if (!token) {
                log("JWT not found. Please login again.");
                return;
            }

            const base = "@ViewBag.LocationWsBase";
            const wsUrl = `${base}?mode=watch&watchUserId=${elderId}&token=${token}`;


            log("Connecting to microservice...");
            console.log("WS:", wsUrl);

            ws = new WebSocket(wsUrl);

            ws.onopen = () => log("Connected to microservice");

            ws.onmessage = e => log("GPS → " + e.data);

            ws.onerror = e => {
                console.error(e);
                log("WebSocket error");
            };

            ws.onclose = () => log("Connection closed");
        }

        function log(msg) {
            const box = document.getElementById("liveLog");
            box.innerHTML += msg + "<br>";
            box.scrollTop = box.scrollHeight;
        }
    </script>

</body>
</html>
