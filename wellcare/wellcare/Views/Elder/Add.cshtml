@model wellcare.Models.AssignElderModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Add Elder</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        * {
            box-sizing: border-box;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        body {
            margin: 0;
            background: #f5f7fa;
            min-height: 100vh;
        }

        /* Header */
        .header {
            background: #ffffff;
            border-bottom: 1px solid #e5e7eb;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

            .header h2 {
                margin: 0;
                font-size: 20px;
                font-weight: 600;
            }

        .back-link {
            text-decoration: none;
            color: #4f46e5;
            font-size: 14px;
        }

            .back-link:hover {
                text-decoration: underline;
            }

        /* Content */
        .content {
            padding: 32px 24px;
            max-width: 600px;
        }

        .form-title {
            font-size: 18px;
            font-weight: 600;
            margin-bottom: 8px;
        }

        .form-subtitle {
            font-size: 14px;
            color: #555;
            margin-bottom: 24px;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 18px;
        }

        label {
            font-size: 14px;
            margin-bottom: 6px;
            color: #333;
        }

        input {
            padding: 10px 12px;
            font-size: 14px;
            border-radius: 6px;
            border: 1px solid #ccc;
        }

            input:focus {
                outline: none;
                border-color: #4f46e5;
            }

        .error {
            color: #dc2626;
            font-size: 13px;
            margin-bottom: 14px;
        }

        .btn-primary {
            padding: 12px 20px;
            background: #4f46e5;
            border: none;
            border-radius: 6px;
            color: #ffffff;
            font-size: 14px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background: #4338ca;
            }

        @@media (max-width: 600px) {
            .content {
                padding: 20px 16px;
            }
        }
    </style>
</head>
<body>

    <!-- Header -->
    <div class="header">
        <h2>Add Elder</h2>

        <a asp-controller="CaretakerHome" asp-action="Index" class="back-link">
            ← Back
        </a>
    </div>

    <!-- Main Content -->
    <div class="content">

        <div class="form-title">Link an Elder</div>
        <div class="form-subtitle">
            Enter the elder’s login credentials to link them to your account.
        </div>

        @if (ViewBag.Error != null)
        {
            <div class="error">@ViewBag.Error</div>
        }

        <form method="post">

            <div class="form-group">
                <label>Email</label>
                <input asp-for="ElderEmail" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input asp-for="ElderPassword" type="password" />
            </div>

            <button type="submit" class="btn-primary">
                Add Elder
            </button>
        </form>

    </div>

</body>
</html>
