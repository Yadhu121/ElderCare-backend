@model wellcare.Models.caretakerLogin

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Caretaker Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        * {
            box-sizing: border-box;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        body {
            margin: 0;
            background: #f5f7fa;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-container {
            width: 100%;
            padding: 20px;
        }

        .login-card {
            max-width: 420px;
            margin: auto;
            background: #ffffff;
            padding: 28px;
            border-radius: 10px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
        }

        .title {
            text-align: center;
            margin-bottom: 24px;
            font-weight: 600;
            color: #111;
        }

        .form-group {
            display: flex;
            flex-direction: column;
            margin-bottom: 16px;
        }

        label {
            font-size: 14px;
            margin-bottom: 6px;
            color: #333;
        }

        input {
            padding: 10px 12px;
            font-size: 14px;
            border-radius: 6px;
            border: 1px solid #ccc;
            transition: border-color 0.2s;
        }

            input:focus {
                outline: none;
                border-color: #4f46e5;
            }

        .error {
            font-size: 12px;
            color: #dc2626;
            margin-top: 4px;
        }

        .btn-primary {
            width: 100%;
            margin-top: 10px;
            padding: 12px;
            background: #4f46e5;
            border: none;
            border-radius: 6px;
            color: #ffffff;
            font-size: 15px;
            cursor: pointer;
        }

            .btn-primary:hover {
                background: #4338ca;
            }

        .links {
            margin-top: 18px;
            text-align: center;
            font-size: 14px;
        }

            .links a {
                color: #4f46e5;
                text-decoration: none;
                display: inline-block;
                margin-top: 6px;
            }

                .links a:hover {
                    text-decoration: underline;
                }

        @@media (max-width: 480px) {
            .login-card {
                padding: 22px;
            }
        }
    </style>
</head>
<body>

    <div class="login-container">
        <div class="login-card">
            <h2 class="title">Caretaker Login</h2>

            <form asp-controller="caretakerLogin" asp-action="Login" method="post" novalidate>

                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" />
                    <span asp-validation-for="Email" class="error"></span>
                </div>

                <div class="form-group">
                    <label>Password</label>
                    <input asp-for="Password" type="password" />
                    <span asp-validation-for="Password" class="error"></span>
                </div>

                <button type="submit" class="btn-primary">
                    Login
                </button>
            </form>

            <div class="links">
                <p>
                    Don’t have an account?
                    <a asp-controller="caretakerRegister" asp-action="Register">
                        Register here
                    </a>
                </p>

                <a asp-controller="Password" asp-action="Forgot">
                    Forgot password?
                </a>
            </div>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

    @if (TempData["message"] != null)
    {
        <script>
            alert('@TempData["message"]');
        </script>
    }

</body>
</html>
