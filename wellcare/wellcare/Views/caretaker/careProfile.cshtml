@model wellcare.Models.CaretakerProfile

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Caretaker Profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
        * {
            box-sizing: border-box;
            font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
        }

        body {
            margin: 0;
            background: #f5f7fa;
            min-height: 100vh;
        }

        /* Header */
        .header {
            background: #ffffff;
            border-bottom: 1px solid #e5e7eb;
            padding: 16px 24px;
            display: flex;
            align-items: center;
            gap: 16px;
        }

            .header h2 {
                margin: 0;
                font-size: 20px;
                font-weight: 600;
            }

        .back-link {
            text-decoration: none;
            color: #4f46e5;
            font-size: 14px;
            font-weight: 500;
        }

            .back-link:hover {
                text-decoration: underline;
            }

        /* Content */
        .content {
            padding: 32px 24px;
            max-width: 900px;
        }

        .profile-title {
            font-size: 18px;
            font-weight: 600;
        }

        .profile-grid {
            display: grid;
            grid-template-columns: 1fr 2fr;
            gap: 16px;
            background: #ffffff;
            padding: 24px;
            border-radius: 10px;
            border: 1px solid #e5e7eb;
        }

        .label {
            color: #555;
            font-size: 14px;
        }

        .value {
            font-size: 15px;
            color: #111;
            font-weight: 500;
        }

        .pen {
            cursor: pointer;
            color: #4f46e5;
            margin-left: 6px;
            font-size: 14px;
        }

        textarea {
            width: 100%;
            resize: none;
            font-size: 14px;
            padding: 8px;
        }

        button {
            margin-top: 16px;
            background: #4f46e5;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 6px;
            cursor: pointer;
        }

        @@media (max-width: 600px) {
            .profile-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <script>
        function previewImage(input) {
            const img = document.getElementById("profileImg");
            img.src = URL.createObjectURL(input.files[0]);
            document.getElementById("saveBtn").style.display = "inline-block";
        }

        function editBio() {
            document.getElementById("bioText").style.display = "none";
            document.getElementById("bioEdit").style.display = "block";
            document.getElementById("saveBtn").style.display = "inline-block";
        }
    </script>
</head>

<body>

    <!-- Header -->
    <div class="header">
        <a asp-controller="CaretakerHome"
           asp-action="Index"
           class="back-link">
            ← Back
        </a>

        <h2>Caretaker Profile</h2>
    </div>

    <!-- Content -->
    <div class="content">

        <form asp-action="careProfile" method="post" enctype="multipart/form-data">

            <!-- Profile Header -->
            <div style="display:flex;gap:20px;margin-bottom:24px;align-items:center;">
                <div style="position:relative;width:110px;">
                    <img id="profileImg"
                         src="@(string.IsNullOrEmpty(Model.Photo)
                                                      ? Url.Content("~/images/default-avatar.png")
                                                      : Url.Content(Model.Photo))"
                         style="width:110px;height:110px;border-radius:50%;object-fit:cover;border:1px solid #e5e7eb;" />

                    <label for="photoInput"
                           style="position:absolute;bottom:0;right:0;
                                  width:32px;height:32px;
                                  background:#4f46e5;
                                  color:white;
                                  border-radius:50%;
                                  display:flex;
                                  align-items:center;
                                  justify-content:center;
                                  cursor:pointer;">
                        ✎
                    </label>

                    <input type="file"
                           id="photoInput"
                           name="Photo"
                           hidden
                           accept="image/*"
                           onchange="previewImage(this)" />
                </div>

                <div>
                    <div class="profile-title">
                        @Model.FirstName @Model.LastName
                    </div>
                    <div class="label">@Model.Email</div>
                </div>
            </div>

            <!-- Details -->
            <div class="profile-grid">

                <div class="label">Phone</div>
                <div class="value">@Model.Phone</div>

                <div class="label">Age</div>
                <div class="value">@Model.Age</div>

                <div class="label">Gender</div>
                <div class="value">@Model.Gender</div>

                <div class="label">Address</div>
                <div class="value">@Model.HomeAddress</div>

                <div class="label">
                    Bio <span class="pen" onclick="editBio()">✎</span>
                </div>

                <div class="value">
                    <div id="bioText">@Model.Bio</div>
                    <textarea id="bioEdit"
                              name="Bio"
                              rows="4"
                              style="display:none;">@Model.Bio</textarea>
                </div>

            </div>

            <button id="saveBtn" type="submit" style="display:none;">
                Save Changes
            </button>

        </form>

    </div>

</body>
</html>
